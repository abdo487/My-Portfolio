<div 
    data-aos="fade-right"
    data-aos-delay="<%= index * 500 %>"
    class="w-full max-w-[350px] min-w-[350px] flex flex-col gap-3 p-[20px] 
    bg-light-400 dark:bg-primary-light-500
    border-[0.5px] border-grey-300 dark:border-secondary-500
    transition-all duration-300 hover:shadow-lg"
>
    <div class="w-full aspect-[3/2] bg-orange-200 dark:bg-secondary-500 dark:bg-opacity-20  p-[10px] flex items-center justify-center">
        <img 
            src="/assets/Projects-images/<%= project.image %>" 
            alt="<%= project.title %>" 
            class="w-full object-contain h-full" />
    </div>
    <div class="w-full h-auto flex flex-col gap-3">
        <div class="w-full h-auto flex flex-col gap-1">
            <div class="text-primary-500 dark:text-light-500 text-xl font-bold font-['Poppins']">
                <%= project.name %>
            </div>
            <div class="text-primary-500 dark:text-grey-400 text-base font-normal font-['Poppins-light']">
                <%= project.description %>
            </div>  
        </div>
        <div class="w-full h-auto flex flex-wrap gap-2 items-center py-3">
            <% for( let index = 0; index < project.technologies.length; index++ ) { %>
                <!-- <%= project.technologies[index].logo %> -->
                <% if (project.technologies[index].logo) { %>
                    <img src="/assets/Technlogies-images/<%= project.technologies[index].logo %>" alt="<%= project.technologies[index].name %>">
                <% } else { %>
                    <div class="text-primary-500 dark:text-grey-600 text-base font-normal font-['Poppins']">
                        <%= project.technologies[index].name %>
                    </div>
                <% } %>
            <% } %>
        </div>
        <div class="w-full h-auto flex flex-col gap-2 mt-auto">
            <a 
                href="<%= project.githubUrl %>" 
                class="text-primary-500 dark:text-grey-400 text-base font-normal font-['Poppins'] 
                px-[30px] py-[13px] flex items-center justify-center gap-[10px] 
                border border-grey-400 dark:border-secondary-500
            ">
                <i class="fab fa-github"></i>
                Github
            </a>
            <a href="<%= project.demoUrl %>" class="text-light-500 bg-secondary-500 text-base font-normal font-['Poppins'] px-[30px] py-[13px] flex items-center justify-center gap-[10px] border border-secondary-500">
                <i class="fas fa-play"></i>
                Demo
            </a>
        </div>
    </div>
</div>